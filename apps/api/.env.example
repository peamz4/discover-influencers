PORT=5000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/prime_influencer?schema=public"

# JWT - Access Token (short-lived, 15 minutes)
# SECURITY: Generate strong random secrets for production! Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
ACCESS_TOKEN_EXPIRES_IN="15m"

# JWT - Refresh Token (long-lived, 7 days)
# SECURITY: Generate strong random secrets for production! Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-key-change-in-production"
REFRESH_TOKEN_EXPIRES_IN="7d"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Logging (optional)
# Set to 'true' to enable file logging, 'false' for serverless/cloud environments
LOG_TO_FILES="true"
