generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

enum RecordType {
  INDIVIDUAL
  INFLUENCER
}

enum Gender {
  M
  F
  OTHER
}

enum EngagementRateTier {
  LOW
  MEDIUM
  HIGH
}

enum CollaborationStatus {
  PROSPECT
  CONTACTED
  WARM_LEAD
  ACTIVE
  PAUSED
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(VIEWER)
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  influencersCreated Person[]
  refreshTokens      RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

model Person {
  id                      String                @id @default(cuid())
  recordId                String                @unique // IND-001, INF-011, etc.
  recordType              RecordType
  
  // Personal Information
  fullName                String
  preferredName           String?
  gender                  Gender?
  birthDate               DateTime?
  email                   String?               @unique
  phone                   String?
  city                    String?
  country                 String?
  
  // Professional Information
  occupation              String?
  influencerCategory      String?
  
  // Social Media (Primary)
  primaryPlatform         String?
  followersCount          Int?
  totalFollowersCount     Int?
  engagementRate          Float?
  engagementRateTier      EngagementRateTier?
  
  // Additional Information
  interests               String?
  notes                   String?
  
  // Social Media (Secondary)
  secondaryPlatform       String?
  secondaryFollowersCount Int?
  averageMonthlyReach     Int?
  
  // Collaboration
  collaborationStatus     CollaborationStatus?
  languages               String?
  portfolioUrl            String?
  lastContactDate         DateTime?
  
  // Metadata
  status                  Status                @default(ACTIVE)
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  createdById             String?
  
  // Relations
  createdBy               User?                 @relation(fields: [createdById], references: [id])
  categoryRef             Category?             @relation(fields: [influencerCategory], references: [name])

  @@index([recordType])
  @@index([influencerCategory])
  @@index([city])
  @@index([primaryPlatform])
  @@index([collaborationStatus])
  @@index([engagementRateTier])
  @@map("people")
}

// FUTURE IMPROVEMENT:
// - Replace string-based relation influencerCategory -> Category.name with a dedicated categoryId field to allow safe renames.
// - Reconsider unique constraint on Person.email; current uniqueness blocks identical emails across INDIVIDUAL and INFLUENCER records.
//   For real-world data, removing @unique or scoping uniqueness per recordType may be preferable.

model Category {
  id          String       @id @default(cuid())
  name        String       @unique
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  people Person[]

  @@map("categories")
}
